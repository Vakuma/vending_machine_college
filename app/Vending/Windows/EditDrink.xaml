<Window x:Class="Vending.Window.EditDrink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vending.Window"
        mc:Ignorable="d"
        Title="EditDrink" Height="400" Width="200" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Image  
                Name="image"
                Height="100"
                    Width="100"
                    Margin="10"/>

            <Button Name="addPhotoButton"
                        Click="addPhotoButton_Click"
                         Height="30"
                    Width="140"
                         Margin="10, 0, 10, 10"
                        Content="Выбрать фото..."
                        />

            <TextBlock Text="Цена"
                           Margin="10"/>

            <TextBox Name="costTextBox"
                         Height="30"
                         Margin="10, 0, 10, 10"/>

            <TextBlock Text="Кол-во"
                           Margin="10"/>

            <TextBox Name="countTextBox"
                         Height="30"
                         Margin="10, 0, 10, 10"/>

            <Button Name="saveButton"
                    Content="Сохранить"
                    Height="30"
                    Margin="10, 0, 10, 10" />
        </StackPanel>
    </Grid>
</Window>
